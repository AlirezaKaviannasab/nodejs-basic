<div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
    <h2>ویرایش دسته</h2>
</div>
<form class="form-horizontal" action="/admin/tags/<%= Tag.id %>" method="post">

    <%- include(viewPath('/errormessages')) -%>

    <div class="form-group row">
        <div class="col">
            <label for="name" class="control-label font-weight-bold">عنوان دسته</label>
            <input type="text" class="form-control" name="name" id="name" placeholder="عنوان را وارد کنید" value="<%= old('name' , Tags.name ) %>">
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label for="parent" class="control-label font-weight-bold font-weight-bold">دسته مربوطه</label>
            <select name="parent" id="parent" class="form-control">
                <option value="<%= Tag.name %>"><%= Tag.name %></option>
                <% Tags.forEach(tag => { %> 
                    <option value="<%= tag.id %>" <%= String(old('tags' , tag.parent)) == String(tag.id) ? 'selected' : '' %> ><%= tag.name %></option>
                <% }) %>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <button type="submit" class="btn btn-info">ویرایش</button>
        </div>
    </div>
</form>



