<div
  class="justify-content-between align-items-center mb-3 border-bottom-1"
>
  <h2>permissions</h2>
  <div class="btn-group">
    <a href="/admin/users/permissions/create" class="btn btn-sm btn-danger"
      >ایجاد دسته جدید</a
    >
    <a href="/admin/users/roles" class="btn btn-sm btn-primary"
      >ایجاد دسته جدید</a
    >
  </div>
  <div class="table-responsive">
    <table class= "table table-striped table-bordered">
      <thead>
        <tr>
          <th>عنوان </th>
          <th>نوع</th>
          <th>تنظیمات</th>
        </tr>
      </thead>
      <tbody>
        <% Permissions.docs.forEach(permissions => { %>
        <tr>
          <td><a href="#"><%= permissions.name %></a></td>
          <td><%= permissions.label%></td>
          <td>
            <form
              action="/admin/users/permissions/delete/<%= permissions.id %>"
              method="post"
            >
              <div class="btn-group btn-group-sm">
                <a
                  href="/admin/users/permissions/<%= permissions.id %>/edit"
                  class="btn btn-primary"
                  >ویرایش</a
                >
                <button type="submit" class="btn btn-danger">حذف</button>
              </div>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
