<div class="">
  <div
    class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom"
  >
    <h2>ایجاد دوره</h2>
  </div>
  <form
    class="form-horizontal"
    action="/admin/users/roles/create"
    method="post"
  >
  <%- include(viewPath('/errormessages')) -%>
    <div class="form-group row">
      <div class="col">
        <label for="name" class="control-label font-weight-bold">عنوان دوره</label>
        <input type="text"
          class="form-control"
          name="name"
          id="name"
          placeholder="عنوان را وارد کنید"
          value=""
        />
      </div>
    </div>

      <div class="col">
        <label for="label" class="control-label font-weight-bold">labels</label>
        <input type="text"
          class="form-control"
          name="label"
          id="label"
          placeholder="لیبل را وارد کنید"
          value=""
        />
</div>
<div class="col">
  <label for="permissions" class="control-label font-weight-bold font-weight-bold">permissions</label>
  <select name="permissions" id="permissions" class="form-control form-control-chosen" data-placeholder="دسته بندی مورد نظر ..." multiple>
      <% Permissions.forEach(per => { %> 
          <option value="<%= per.id %><%= old('permissions').indexOf(per.id) !== -1 ? 'selected' : ''%>"><%= per.label %></option>                        
      <% }) %>
  </select>
</div>
<div class="form-group row">
  <div class="col mt-3">
    <button type="submit" class="btn btn-danger">ارسال</button>
  </div>
</div>
</form>
      </div>
    
</div>
