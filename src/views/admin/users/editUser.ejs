
  
<div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
    <h2>ویرایش</h2>
</div>
<form class="form-horizontal" action="/admin/users/edit/<%= Users._id %>" method="post">
    <%- include(viewPath('/errormessages')) -%>
    <div class="form-group row">
        <div class="col">
            <label for="name" class="control-label font-weight-bold">نام</label>
            <input type="text" class="form-control" name="name" id="name" placeholder="نام را وارد کنید" value="<%=  Users.name %>">
        </div>
    </div> 
    <div class="form-group row"> 
        <div class="col">
            <label for="email" class="control-label font-weight-bold">ایمیل</label>
            <input type="email" class="form-control" name="email" id="email" placeholder="ایمیل را وارد کنید" value="<%= Users.email %>">
        </div>
        <div class="col">
            <label for="phoneNumber" class="control-label font-weight-bold">شماره تماس</label>
            <input type="number" class="form-control" name="phoneNumber" id="phoneNumber" placeholder="تگ ها را وارد کنید" value="<%= Users.phoneNumber %>">
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label for="role" class="control-label font-weight-bold font-weight-bold">نقش</label>
            <select name="role" id="role" class="form-control form-control-chosen" data-placeholder="نقش مورد نظر ...">
                    <option value="admin">ادمین</option>  
                    <option value="vip">VIP</option>
                    <option value="user">عادی</option>                     
            </select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <button type="submit" class="btn btn-danger">ثبت</button>
        </div>
    </div>
</form>
