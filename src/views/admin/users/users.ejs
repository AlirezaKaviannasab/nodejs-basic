<div class="d-flex justify-content-between align-items-center mb-3 border-bottom-1">
        <h2>کاربر ها</h2>
        <div class="btn-group">
            <a href="/admin/users/create" class="btn btn-sm btn-primary">ایجاد کاربر جدید</a>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>نام</th>
                <th>ایمیل</th>
                <th>نقش</th>
                <th>شماره تماس</th>
                <th>تنظیمات</th>
            </tr>
            </thead>
            <tbody>
                <% Users.docs.forEach(Users => { %>
                   
                    <tr>
                        <td><a href=""> <%= Users.name %> </a></td>
                        <td><%= Users.email %></td>
                        <td><%= Users.role %></td>
                        <td><%= Users.phoneNumber %></td>
                        <td>
                            <form action="/admin/users/delete/<%= Users._id %>" method="post">
                                <div class="btn-group btn-group-sm">
                                    <a href="/admin/users/edit/<%= Users._id %>"  class="btn btn-primary">ویرایش</a>
                                    <a href="/admin/users/<%= Users._id %>/addroles"  class="btn btn-secondary">سطح دسترسی</a>
                                    <button type="submit" class="btn btn-danger">حذف</button>
                                </div>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    
     