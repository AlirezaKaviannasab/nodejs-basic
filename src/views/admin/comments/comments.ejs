<div class="d-flex justify-content-between align-items-center mb-3 border-bottom-1">
    <h2>دوره ها</h2>
    <div class="btn-group">
        <a href="/admin/comments/approved" class="btn btn-sm btn-primary">کامنت های در انتظار تایید</a>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>نام کاربر</th>
            <th>پست</th>
            <th>متن کامنت</th>
        </tr>
        </thead>
        <tbody>
            <% Comments.docs.forEach(Comments => { %>
                <tr>
                    <td><%= Comments.user.name %></td>
                    <td><%= Comments.posts.title %></td>
                    <td><%= Comments.body %></td>
                    
                    <td>
                        <form action="/admin/comments/delete/<%= Comments.id %>" method="post">
                            <div class="btn-group btn-group-sm">
                                <button type="submit" class="btn btn-danger">حذف</button>
                            </div>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

 