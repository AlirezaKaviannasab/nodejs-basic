<div class="d-flex justify-content-between align-items-center mb-3 border-bottom-1">
    <h2>کامنت های تایید شده</h2>
    <div class="btn-group">
        <a href="/admin/comments/approved" class="btn btn-sm btn-primary">کامنت های در انتظار تایید</a>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>نام کاربر</th>
            <th>پست</th>
            <th>متن کامنت</th>
        </tr>
        </thead>
        <tbody>
            <% Comments.docs.forEach(comments => { %>
               
                tr>
                        <td><%= comments.user.name %></td>
                        <td>
                                <a href="<%= comments.posts.Path() %>"><%= comments.posts.title %></a>
                        </td>
                        <td><%= comments.body %></td>
                        <td>
                            <div class="d-flex">
                                    <form action="/admin/comments/update/<%= comments.id%>" method="post">
                                        <button type="submit" class="btn btn-sm btn-success ml-2">تایید</button>
                                    </form>
                                    <form action="/admin/comments/delete/<%= comments.id %>" method="post">
                                        <button type="submit" class="btn btn-sm btn-danger">حذف</button>
                                    </form>
                            </div>
                        </td>
                    </tr>
            <% }) %>
        </tbody>
    </table>
</div>

 