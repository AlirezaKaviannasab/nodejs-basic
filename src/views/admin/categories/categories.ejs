<div
  class="justify-content-between align-items-center mb-3 border-bottom-1"
>
  <h2>دسته بندی ها</h2>
  <div class="btn-group">
    <a href="/admin/categories/create" class="btn btn-sm btn-primary"
      >ایجاد دسته جدید</a
    >
  </div>
  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>عنوان دسته</th>
          <th>نوع</th>
          <th>تنظیمات</th>
        </tr>
      </thead>
      <tbody>
        <% Categories.docs.forEach(category => { %>
        <tr>
          <td><a href="#"><%= category.name %></a></td>
          <td><%= category.parent ? category.parent.name : 'دسته اصلی' %></td>
          <td>
            <form
              action="/admin/categories/<%= category.id %>?_method=DELETE"
              method="post"
            >
              <div class="btn-group btn-group-sm">
                <a
                  href="/admin/categories/<%= category.id %>/edit"
                  class="btn btn-primary"
                  >ویرایش</a
                >
                <button type="submit" class="btn btn-danger">حذف</button>
              </div>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
