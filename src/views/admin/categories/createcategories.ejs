<div class="">
  <div
    class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom"
  >
    <h2>ایجاد دوره</h2>
  </div>
  <form
    class="form-horizontal"
    action="/admin/categories/create"
    method="post"
  >
  <%- include(viewPath('/errormessages')) -%>
    <div class="form-group row">
      <div class="col">
        <label for="title" class="control-label font-weight-bold">عنوان دوره</label>
        <input type="text"
          class="form-control"
          name="name"
          id="name"
          placeholder="عنوان را وارد کنید"
          value=""
        />
      </div>
    </div>

    <div class="form-group row">
      <div class="col">
        <label for="description" class="control-label font-weight-bold"
          >متن</label
        >
        <textarea name="description" id="description"></textarea>
      </div>
    </div>
    <div class="form-group row">
      
      </div>
      <div class="col">
        <label for="parent" class="control-label font-weight-bold">Parents</label>
        <select name="parent" id="parent" class="form-control">
          <option value="none">دسته اصلی</option>
      <% Categories.forEach(cate => { %> 
          <option value="<%= cate.id %>" <%= String(old('categories')) == String(cate.id) ? 'selected' : '' %> ><%= cate.name %></option>
      <% }) %>
  </select>
</div>
<div class="form-group row">
  <div class="col mt-3">
    <button type="submit" class="btn btn-danger">ارسال</button>
  </div>
</div>
</form>
      </div>
    
</div>
