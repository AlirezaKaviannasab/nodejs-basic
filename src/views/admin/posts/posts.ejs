<div class="d-flex justify-content-between align-items-center mb-3 border-bottom-1">
        <h2>پست ها</h2>
        <div class="btn-group">
            <a href="/admin/posts/create" class="btn btn-sm btn-primary">ایجاد پست جدید</a>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>عنوان مقاله</th>
                <th>میانگین امتیاز</th>
                <th>قیمت</th>
                <th>تنظیمات</th>
            </tr>
            </thead>
            <tbody>
                <% Posts.docs.forEach(Posts => { %>
                   
                    <tr>
                        <td><a href="/admin/<%= Posts._id %>"> <%= Posts.title %> </a></td>
                        <td><%= Posts.rating %></td>
                        <td><%= Posts.price %></td>
                        <td>
                            <form action="/admin/posts/delete/<%= Posts.id %>" method="post">
                                <div class="btn-group btn-group-sm">
                                    <a href="/admin/posts/<%= Posts._id %>/edit"  class="btn btn-primary">ویرایش</a>
                                    <% Sections.forEach(section => { %>
                                    <% if(section.posts == Posts.id){ %>
                                        <input type="hidden" id="sectionId" name="sectionId" value="<%= section._id %>">
                                    <% }}) %>
                                    <button type="submit" class="btn btn-danger">حذف</button>
                                </div>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    
     