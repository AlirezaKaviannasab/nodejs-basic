
  
<div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
    <h2>ویرایش</h2>
</div>
<form class="form-horizontal" action="/admin/posts/<%= Posts._id %>" method="post">
    <%- include(viewPath('/errormessages')) -%>
    <div class="form-group row">
        <div class="col">
            <label for="title" class="control-label font-weight-bold">عنوان دوره</label>
            <input type="text" class="form-control" name="title" id="title" placeholder="عنوان را وارد کنید" value="<%=  Posts.title %>">
        </div>
    </div> 
    <textarea name="description" id="description"><%= Posts.description %></textarea>
    <div class="form-group row">
        <div class="col">
            <label for="categories" class="control-label font-weight-bold font-weight-bold">دسته بندی</label>
            <select name="categories" id="categories" class="form-control form-control-chosen" data-placeholder="دسته بندی مورد نظر ..." multiple>
                <% Categories.forEach(cate => { %> 
                    <option value="<%= cate.id %>"<%= Posts.categories.indexOf(cate.id) !== -1 ? 'selected' : ''%> ><%= cate.name %></option>                        
                <% }) %>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label for="tags" class="control-label font-weight-bold font-weight-bold">تگ ها</label>
            <select name="tags" id="tags" class="form-control form-control-chosen" data-placeholder="دسته بندی مورد نظر ..." multiple>
                <% Tags.forEach(tag => { %> 
                    <option value="<%= tag.id %>"><%= tag.name %></option>                        
                <% }) %>
            </select>
        </div>
    </div> 
    <div class="form-group row"> 
        <div class="col">
            <label for="price" class="control-label font-weight-bold">قیمت</label>
            <input type="text" class="form-control" name="price" id="price" placeholder="قیمت ها را وارد کنید" value="<%= Posts.price %>">
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <button type="submit" class="btn btn-danger">ثبت</button>
        </div>
    </div>
</form>
